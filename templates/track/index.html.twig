{% extends 'base.html.twig' %}

{% block title %}{{ 'Tracks'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'Tracks'|trans }}</h1>

    <table class="table text-white">
        <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Created At'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.name }}</td>
                <td>{{ track.createdAt ? track.createdAt|date : '' }}</td>
                <td>
                    <a href="{{ path('track_show', {'id': track.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('track_edit', {'id': track.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'NoTrack'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary" href="{{ path('track_new') }}">{{ 'CreateTrack'|trans }}</a>
    </div>
{% endblock %}
