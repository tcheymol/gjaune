{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block content %}
    <h1>Track</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ track.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ track.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ track.createdAt ? track.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ track.updatedAt ? track.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Disabled</th>
                <td>{{ track.disabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ track.validated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('track_index') }}">back to list</a>

    <a href="{{ path('track_edit', {'id': track.id}) }}">edit</a>

    {{ include('track/_delete_form.html.twig') }}
{% endblock %}
